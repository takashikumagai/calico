{
  "name": "Calico",
  "manifest_version": 2,
  "version": "0.0.0.1",
  "description": "English to katakana typing assist tool",
  "background": { "scripts": [
      "jquery.min.js",
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "all_frames": true,
    "js": [
      "jquery.min.js",
      "contentscript.js"
    ]
  }],
  "browser_action": {
  },
  "commands": {
    "select-candidate": {
      "suggested_key": {
        "default": "Alt+M",
        "windows": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "Select the currently focused candidate"
    },
    "toggle-active": {
      "suggested_key": {
        "default": "Alt+O",
        "windows": "Alt+O",
        "mac": "Alt+O"
      },
      "description": "Toggles the active/inactive state of the extension"
    }
  },
  "web_accessible_resources": [
    "popup.html",
    "popup.js",
    "english-to-katakana.json"
  ]
}
